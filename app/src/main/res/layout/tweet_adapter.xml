<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/tweet_adapter_img_user"
        app:srcCompat="@drawable/ic_person_black_64dp"
        android:layout_gravity="top"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tweet_adapter_tv_name"
                android:text="@string/app_name"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tweet_adapter_tv_time"
                android:text="8h"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_adapter_tv_text"
            android:autoLink="web"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            android:text="To run the RMI application, you need to pack your project into two jar files. The first jar file includes the classes to run in client machine. And second Jar file, including the classes to run in server machine."/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_adapter_img_tweet"
            android:visibility="gone"/>

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/tweet_adapter_video_tweet"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

    </LinearLayout>


</LinearLayout>